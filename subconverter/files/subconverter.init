#!/bin/sh /etc/rc.common

START=99
SERVICE_WRITE_PID=1
SERVICE_DAEMONIZE=1

start() {
	logger -t Subconverter 'Starting Subconverter service'
	service_start /usr/bin/subconverter/subconverter
	return 0
}

stop() {
	if [ -n "`pidof subconverter`" ]; then
		logger -t Subconverter 'Shutting down Subconverter service'
		service_stop /usr/bin/subconverter/subconverter
	fi
	return 0
}

restart() {
	logger -t Subconverter 'Restarting Subconverter service'
	stop
	sleep 1
	start
}
